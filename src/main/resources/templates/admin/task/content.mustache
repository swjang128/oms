<div class="container-fluid">
	<!-- DataTales Example -->
	<div class="card shadow mb-4">
		<div class="card-body">
			<div class="table-responsive-xl">
				<table class="table table-bordered" id="table" width="100%" cellspacing="0" style="text-align: center">
					<thead>
						<tr>
							<th></th>
							<th>종류</th>
							<th>제목</th>
							<th>진행상황</th>
							<th>상위일감</th>							
							<th>담당자</th>
							<th>시작일</th>
							<th>종료일</th>
						</tr>
					</thead>
					<tbody id="tbody">
						{{#taskList}}
						<tr>
							<td>
								<hidden id="taskId">{{id}}</hidden>
								<label>{{id}}</label>
							</td>
							<td>{{type}}</td>
							<td>{{title}}</td>
							<td>{{status}}</td>
							{{#parentList}}<td>{{parentTask}}</td>{{/parentList}}
							<td>{{manager}}</td>
							<td>{{startDate}}</td>
							<td>{{endDate}}</td>
							<td>
								<button	class="btn btn-sm btn-info shadow-sm updateModal">
									<i class="fas fa-search fa-sm text-white-100"></i>
								</button>
							</td>
						</tr>
						{{/taskList}}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>