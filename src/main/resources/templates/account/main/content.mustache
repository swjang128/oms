<div class="container">
	<div class="row justify-content-center">
		<div class="col-xl-6 col-lg-6 col-md-6">
			<div class="card o-hidden border-0 shadow-lg my-5">
				<div class="p-5">
					<div class="text-center">
						<h1 class="h4 text-gray-900 mb-4">Capias Management System</h1>
					</div>
					<div class="text-left">
						<h6 class="h6 text-danger mb-6" id="message">{{message}}</h6>
					</div>
					<form class="user" id="loginForm" action="/account/login" method="post" encType="application/x-www-form-urlencoded">
						<div class="form-group">
							<input type="email" class="form-control form-control-user" id="email" name="email" aria-describedby="emailHelp" placeholder="이메일">
						</div>
						<div class="form-group">
							<input type="password" class="form-control form-control-user" id="password" name="password" onkeyup="enterLogin()" placeholder="비밀번호">
						</div>
						<div class="form-group">
							<div class="custom-control custom-checkbox small">
								<input type="checkbox" class="custom-control-input" id="remember-me" name="remember-me"> <label class="custom-control-label"	for="remember-me">자동 로그인</label>
							</div>
						</div>
						<a onClick="login()" class="btn btn-primary btn-user btn-block">로그인</a>
						<hr>
						<a href="/account/resetPassword" class="btn btn-google btn-user btn-block">비밀번호 초기화</a>
						<a onClick="createEmail()" class="btn btn-success btn-user btn-block">계정 등록</a>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>