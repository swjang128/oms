<div class="container">
	<!-- Outer Row -->
	<div class="row justify-content-center">
		<div class="col-xl-6 col-lg-6 col-md-6">
			<div class="card o-hidden border-0 shadow-lg my-5">
				<div class="p-5">
					<div class="text-center">
						<h1 class="h4 text-gray-900 mb-2">비밀번호 초기화</h1>
					</div>
					<div class="text-left">
						<h6 class="h6 text-danger mb-6" id="message">{{message}}</h6>
					</div>
					<form class="user">
						<div class="form-group">
							<input type="email" class="form-control form-control-user" id="email" aria-describedby="emailHelp" onkeyup="enter()" placeholder="가입한 이메일">
						</div>
						<a onclick="resetPassword()"
							class="btn btn-danger btn-user btn-block">비밀번호 초기화</a>
						<hr>
						<a href="/account" class="btn btn-primary btn-user btn-block"><i class="fab fa-success-f fa-fw"></i>로그인 하기</a>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>