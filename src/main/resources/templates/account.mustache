<!-- 공통 Header -->
{{>plugin/header}}

<!-- ================== BEGIN page-css ================== -->
<link href="/assets/plugins/datatables.net-bs5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
<link href="/assets/plugins/datatables.net-buttons-bs5/css/buttons.bootstrap5.min.css" rel="stylesheet" />
<link href="/assets/plugins/datatables.net-responsive-bs5/css/responsive.bootstrap5.min.css" rel="stylesheet" />
<link href="/assets/plugins/bootstrap-table/dist/bootstrap-table.min.css" rel="stylesheet" />
<!-- ================== END page-css ================== -->

</head>
<body>
	<!-- BEGIN #app -->
	<div id="app" class="app">
		<!-- 헤드바 -->
		{{>plugin/head_bar}}
		<!-- 사이드바 -->
		{{>plugin/sidebar}}
		<!-- BEGIN #content -->
		<div id="content" class="app-content">
			<!-- BEGIN container -->
			<div class="container">
				<!-- BEGIN row -->
				<div class="row justify-content-center">
					<!-- BEGIN col-10 -->
					<div class="col-xl-10">
						<!-- BEGIN row -->
						<div class="row">
							<!-- BEGIN col-9 -->
							<div class="col-xl-9">
								<ul class="breadcrumb">
									<li class="breadcrumb-item">인사</li>
									<li class="breadcrumb-item active"><a href="javascript:location.reload();">{{menuName}}</a></li>
								</ul>
								<!-- BEGIN 계정 통계 -->
								<div class="row">
									<div class="col-sm-6 col-lg-3 mb-3 mb-lg-5">
										<!-- Card -->
										<div class="card h-100">
											<div class="card-body">
												<h6 class="card-subtitle mb-2">전체 계정</h6>
												<div class="row align-items-center gx-2">
													<div class="col">
														<span class="js-counter display-4 text-theme">{{totalAccount}}</span>
														<!-- <span class="text-body fs-5 ms-1">(지난달: {{monthAgoAccount}})</span> -->
													</div>
													<div class="col-auto">
														<span class="badge bg-soft-success text-success p-1">
															<i class="bi-graph-up"></i> {{compareAccount}} %
														</span>
													</div>
												</div>
												<div class="card-arrow">
													<div class="card-arrow-top-left"></div>
													<div class="card-arrow-top-right"></div>
													<div class="card-arrow-bottom-left"></div>
													<div class="card-arrow-bottom-right"></div>
												</div>
											</div>
										</div>
										<!-- End Card -->
									</div>
									<div class="col-sm-6 col-lg-3 mb-3 mb-lg-5">
										<!-- Card -->
										<div class="card h-100">
											<div class="card-body">
												<h6 class="card-subtitle mb-2">활성화된 계정</h6>
												<div class="row align-items-center gx-2">
													<div class="col">
														<span class="js-counter display-4 text-primary">{{activeAccount}}</span>
													</div>
													<div class="col-auto">
														<span class="badge bg-soft-success text-primary p-1">
															<i class="bi-graph-up"></i> {{compareActiveAccount}} %
														</span>
													</div>
												</div>
												<div class="card-arrow">
													<div class="card-arrow-top-left"></div>
													<div class="card-arrow-top-right"></div>
													<div class="card-arrow-bottom-left"></div>
													<div class="card-arrow-bottom-right"></div>
												</div>
											</div>
										</div>
										<!-- End Card -->
									</div>
									<div class="col-sm-6 col-lg-3 mb-3 mb-lg-5">
										<!-- Card -->
										<div class="card h-100">
											<div class="card-body">
												<h6 class="card-subtitle mb-2">만료된 계정</h6>
												<div class="row align-items-center gx-2">
													<div class="col">
														<span class="js-counter display-4 text-warning">{{expiredAccount}}</span>
													</div>
													<div class="col-auto">
														<span class="badge bg-soft-success text-warning p-1">
															<i class="bi-graph-up"></i> {{compareExpiredAccount}} %
														</span>
													</div>
												</div>
												<div class="card-arrow">
													<div class="card-arrow-top-left"></div>
													<div class="card-arrow-top-right"></div>
													<div class="card-arrow-bottom-left"></div>
													<div class="card-arrow-bottom-right"></div>
												</div>
											</div>
										</div>
										<!-- End Card -->
									</div>
									<div class="col-sm-6 col-lg-3 mb-3 mb-lg-5">
										<!-- Card -->
										<div class="card h-100">
											<div class="card-body">
												<h6 class="card-subtitle mb-2">정지된 계정</h6>
												<div class="row align-items-center gx-2">
													<div class="col">
														<span class="js-counter display-4 text-danger">{{blockedAccount}}</span>
													</div>
													<div class="col-auto">
														<span class="badge bg-soft-success text-danger p-1">
															<i class="bi-graph-up"></i> {{compareBlockedAccount}} %
														</span>
													</div>
												</div>
												<div class="card-arrow">
													<div class="card-arrow-top-left"></div>
													<div class="card-arrow-top-right"></div>
													<div class="card-arrow-bottom-left"></div>
													<div class="card-arrow-bottom-right"></div>
												</div>
											</div>
										</div>
										<!-- End Card -->
									</div>
								</div>
								<!-- END 계정 통계 -->
								<!-- BEGIN부서+직급 관리 -->
								<div class="row">
									<div class="col-sm-6 col-lg-6 mb-3 mb-lg-5">
										<!-- Card -->
										<div class="card h-100" data-bs-toggle="modal" data-bs-target="#departmentModal">
											<div class="card-body">
												<h6 class="card-subtitle mb-2">부서</h6>
												<div class="row align-items-center gx-2">
													<div class="col">
														<span class="js-counter display-4 text-theme">{{totalDepartment}}</span>
													</div>
													<div class="col-auto">
														<!-- <a class="btn btn-sm btn-outline-success" data-bs-toggle="modal" data-bs-target="#departmentModal">
															<i class="bi-person-plus-fill me-1"></i> 부서관리
														</a> -->
													</div>
													<div class="col-md-9 col-lg-6 column-md-divider px-md-4">
														<div class="row justify-content-start mb-2">
															<div class="col-auto">
																<span class="legend-indicator bg-primary"></span>
																사용: [
																<span class="js-counter display-7 text-success">{{useDepartment}}</span>
																]
															</div>
															<!-- End Col -->
															<div class="col-auto">
																<span class="legend-indicator bg-success"></span>
																미사용: [
																<span class="js-counter display-7 text-secondary">{{unUseDepartment}}</span>
																]
															</div>
															<!-- End Col -->
														</div>
														<!-- End Row -->
														<!-- Progress -->
														<div class="progress rounded-pill">
															<div class="progress-bar" role="progressbar" style="width: {{useDepartmentRate" aria-valuenow="{{useDepartment}}" aria-valuemin="0" aria-valuemax="{{totalDepartment}}"></div>
															<div class="progress-bar bg-success" role="progressbar" style="width: {{unUseDepartmentRate" aria-valuenow="{{unUseDepartment}}" aria-valuemin="0" aria-valuemax="{{totalDepartment}}"></div>
														</div>
														<!-- End Progress -->
													</div>
												</div>
											</div>
											<div class="card-arrow">
												<div class="card-arrow-top-left"></div>
												<div class="card-arrow-top-right"></div>
												<div class="card-arrow-bottom-left"></div>
												<div class="card-arrow-bottom-right"></div>
											</div>
										</div>
										<!-- End Card -->
									</div>
									<div class="col-sm-6 col-lg-6 mb-3 mb-lg-5">
										<!-- Card -->
										<div class="card h-100">
											<div class="card-body">
												<h6 class="card-subtitle mb-2">직급</h6>
												<div class="row align-items-center gx-2">
													<div class="col">
														<span class="js-counter display-4 text-theme" data-bs-toggle="modal" data-bs-target="#positionModal">{{totalPosition}}</span>
													</div>
													<div class="col-md-9 col-lg-6 column-md-divider px-md-4">
														<div class="row justify-content-start mb-2">
															<div class="col-auto">
																<span class="legend-indicator bg-primary"></span>
																사용: [
																<span class="js-counter display-7 text-success">{{usePosition}}</span>
																]
															</div>
															<!-- End Col -->
															<div class="col-auto">
																<span class="legend-indicator bg-success"></span>
																미사용: [
																<span class="js-counter display-7 text-secondary">{{unUsePosition}}</span>
																]
															</div>
															<!-- End Col -->
														</div>
														<!-- End Row -->
														<!-- Progress -->
														<div class="progress rounded-pill">
															<div class="progress-bar" role="progressbar" style="width: {{usePositionRate" aria-valuenow="{{usePosition}}" aria-valuemin="0" aria-valuemax="{{totalPosition}}"></div>
															<div class="progress-bar bg-success" role="progressbar" style="width: {{unUsePositionRate" aria-valuenow="{{unUsePosition}}" aria-valuemin="0" aria-valuemax="{{totalPosition}}"></div>
														</div>
														<!-- End Progress -->
													</div>
												</div>
											</div>
											<div class="card-arrow">
												<div class="card-arrow-top-left"></div>
												<div class="card-arrow-top-right"></div>
												<div class="card-arrow-bottom-left"></div>
												<div class="card-arrow-bottom-right"></div>
											</div>
										</div>
										<!-- End Card -->
									</div>
								</div>
								<!-- End 부서+직급 관리 -->

								<!-- BEGIN 계정 목록 -->
								<div id="datatable" class="mb-5">
									<h4>계정 목록</h4>
									<div class="card">
										<div class="card-body">
											<table id="accountTable" class="table text-nowrap w-100">
												<thead>
													<tr>
														<th></th>
														<th class="table-column-pe-0">
															<div class="form-check">
																<input class="form-check-input" type="checkbox" value="" id="accountCheckAll">
																<label class="form-check-label" for="accountCheckAll"></label>
															</div>
														</th>
														<th>이름</th>
														<th>이메일</th>
														<th>부서</th>
														<th>직급</th>
														<th>주소</th>
														<th>연락처</th>
														<th>입사일</th>
													</tr>
												</thead>
												<tbody>
													{{#accountList}}
													<tr>
														<td></td>
														<td>
															<div class="form-check">
																<input class="form-check-input" type="checkbox" value="{{id}}" id="{{id}}" name="accountRow">
																<label class="form-check-label" for="{{id}}"></label>
															</div>
														</td>
														<td>{{name}}</td>
														<td>{{email}}</td>
														<td>{{department}}</td>
														<td>{{position}}</td>
														<td>{{address}}</td>
														<td>{{phone}}</td>
														<td>{{hireDate}}</td>
													</tr>
													{{/accountList}} {{^accountList}} {{/accountList}}
												</tbody>
											</table>
										</div>
										<div class="card-arrow">
											<div class="card-arrow-top-left"></div>
											<div class="card-arrow-top-right"></div>
											<div class="card-arrow-bottom-left"></div>
											<div class="card-arrow-bottom-right"></div>
										</div>
