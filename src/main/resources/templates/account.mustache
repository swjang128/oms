											</pre>
										</div>
									</div>
								</div>
								<!-- END 계정목록 -->
							</div>
							<!-- END col-9-->
						</div>
						<!-- END row -->
					</div>
					<!-- END col-10 -->
				</div>
				<!-- END row -->
			</div>
			<!-- END container -->
		</div>
		<!-- END #content -->

		<!-- 공통 Footer (로딩+탑스크롤+테마패널) -->
		{{>plugin/footer}}
		<!-- 모달 -->
		{{>modal/create_account}} {{>modal/department}} {{>modal/position}}
	</div>
	<!-- END #app -->

	<!-- ================== BEGIN core-js ================== -->
	<script src="/assets/js/vendor.min.js"></script>
	<script src="/assets/js/app.min.js"></script>
